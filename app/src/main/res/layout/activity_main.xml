<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="423dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Home"
            android:textColor="#000"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/ic_baseline_home_24" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:text="Page"
            android:textSize="20sp"
            android:textColor="#000"
            android:drawableTop="@drawable/ic_baseline_pageview_24" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/textView1"
            android:layout_marginTop="110dp"
            android:layout_alignParentTop="true"
            android:text="Contact"
            android:textColor="#000"
            android:textSize="20sp"
            android:drawableTop="@drawable/ic_baseline_contacts_24"/>
            android:drawableTop="@drawable/ic_baseline_pageview_24" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="110dp"
            android:text="@string/about"
            android:textColor="#000"
            android:textSize="20sp"
            app:drawableTopCompat="@drawable/ic_baseline_group_work_24" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>